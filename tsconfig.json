{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@components": ["src/components/*"],
      "@containers": ["src/containers/*"],
      "@context": ["src/context/*"],
      "@hooks": ["src/hooks/*"],
      "@icons": ["src/assets/icons/*"],
      "@logos": ["src/assets/logos/*"]
    }
  }
}
